.container {
  overflow: hidden;
  box-sizing: border-box;
  padding: 50rpx 30rpx;
}
.mine-topbar {
  margin-bottom: 60rpx;
}
.mine-topbar .van-image {
  display: block;
}
.mine-topbar--avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
  overflow: hidden;
  margin: 0;
  padding: 0;
}
.mine-topbar--avatar::after {
  border: none;
}
.mine-topbar--nickname {
  margin-right: 14rpx;
  font-size: 40rpx;
  font-family: PingFangSC-Semibold, PingFang SC;
  font-weight: 600;
  color: #1e1e1e;
  line-height: 56rpx;
  max-width: 8em;
}
.mine-topbar--sex {
  width: 36rpx;
  height: 36rpx;
}
.mine-topbar--birth {
  font-size: 30rpx;
  font-family: DINAlternate-Bold, DINAlternate;
  font-weight: bold;
  color: #bfbfbf;
  line-height: 34rpx;
}
.mine-menu--item {
  height: 120rpx;
  background: #fff;
  border-radius: 40rpx;
  box-sizing: border-box;
  padding: 0 30rpx;
  margin-bottom: 20rpx;
}
.mine-menu--icon {
  width: 48rpx;
  height: 48rpx;
  margin-right: 30rpx;
}
.mine-menu--title {
  font-size: 32rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #1e1e1e;
  line-height: 44rpx;
  flex: 1;
}
.mine-menu .iconfont {
  font-size: 34rpx;
  font-weight: bold;
  color: #c4ced6;
}
.dialog-message {
  height: 160rpx;
  font-size: 28rpx;
  box-sizing: border-box;
  padding: 50rpx 30rpx;
  text-align: center;
}
.dialog-btns {
  border-top: 1rpx solid #eee;
}
.dialog-btn__cancel,
.dialog-btn__confirm {
  flex: 1;
  margin: 0;
  padding: 0;
  font-size: 28rpx;
  text-align: center;
  line-height: 90rpx;
  background-color: transparent;
  border-radius: 0;
}
.dialog-btn__cancel::after,
.dialog-btn__confirm::after {
  border: none;
}
.dialog-btn__confirm {
  background-color: #75acff;
  color: #fff;
}
