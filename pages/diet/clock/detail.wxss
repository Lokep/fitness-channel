.shadow-light {
  box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
  border-bottom: var(safe-area-bottom);
}
.border-radius {
  border-radius: 18rpx;
}
page {
  background-color: #f8f8f8;
}
.page {
  padding: 30rpx 0 calc(constant(safe-area-inset-bottom, 30rpx) / 2) 0;
  padding: 30rpx 0 calc(env(safe-area-inset-bottom, 30rpx) / 2) 0;
}
.bold {
  font-weight: bold;
}
.car-container {
  margin: 0 30rpx 30rpx 30rpx;
  padding: 42rpx;
  background-color: #fff;
  box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
  border-bottom: var(safe-area-bottom);
  border-radius: 18rpx;
}
.car-container-title {
  font-size: 30rpx;
  color: #333;
}
.clock-img {
  width: 200rpx;
  height: 200rpx;
  border-radius: 12rpx;
  background-color: #f3f3f3;
}
.li {
  padding-left: 30rpx;
  position: relative;
  line-height: 40rpx;
}
.li::before {
  width: 12rpx;
  height: 12rpx;
  background-color: #333;
  border-radius: 50%;
  top: 0;
  left: 0;
  bottom: 0;
  margin: auto 0;
  position: absolute;
  content: '';
  display: block;
}
.li-slide {
  padding: 30rpx;
  background-color: #f9fafb;
  border-radius: 20rpx;
}
