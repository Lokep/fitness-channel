.shadow-light {
  box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
  border-bottom: var(safe-area-bottom);
}
.border-radius {
  border-radius: 18rpx;
}
.wrap {
  position: relative;
}
.charts-toggle-bar {
  justify-content: space-around;
}
.charts-btn {
  color: #fff;
  width: 130rpx;
  height: 74rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 37rpx;
  font-size: 26rpx;
  transition: font-size 0.5s, background-color 0.5s;
}
.charts-btn.active,
.charts-btn.current,
.charts-btn.on {
  background-color: #fff;
  color: #75acff;
  font-size: 28rpx;
}
.charts-container {
  box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
  border-bottom: var(safe-area-bottom);
  border-radius: 30rpx;
  padding: 30rpx;
  background-color: #fff;
}
.charts-title {
  text-align: center;
  font-size: 28rpx;
  color: #666;
  line-height: 54rpx;
}
.charts-message {
  text-align: center;
  font-size: 28rpx;
  color: #666;
  line-height: 54rpx;
}
.charts-message .num {
  font-size: 32rpx;
}
.charts-text {
  text-align: center;
  line-height: 54rpx;
  font-size: 24rpx;
  color: #999;
}
.swiper-btn {
  width: 60rpx;
  height: 60rpx;
  background-color: #fff;
  border-radius: 50%;
  box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
  border-bottom: var(safe-area-bottom);
  background-size: 30rpx 30rpx;
  background-position: center;
  background-repeat: no-repeat;
}
