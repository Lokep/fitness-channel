.dot {
  width: 6px;
  height: 6px;
  border-radius: 50%;
  background-color: #75acff;
  display: inline-block;
}
.dot.blue {
  background-color: #75acff;
}
.clock-item {
  border-radius: 20rpx;
  padding: 20rpx;
  background-color: #fff;
  box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
  border-bottom: var(safe-area-bottom);
}
.clock-item + .clock-item {
  margin-top: 30rpx;
}
.clock-item .top {
  line-height: calc(60rpx + 1px);
}
.clock-item .top > view {
  display: flex;
  align-items: center;
  height: 60rpx;
}
.clock-item .icon {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  overflow: hidden;
  border: 1px solid #75acff;
}
.clock-item .text-container {
  width: calc(100% - 60rpx - 20rpx);
  line-height: 1.75;
}
.clock-item .day {
  padding: 0 12rpx;
  border-radius: 20rpx;
  line-height: 36rpx;
  height: 36rpx;
  margin-left: auto;
  display: inline-block;
  border: 1px solid #999;
}
.arrow-right {
  background-size: 30rpx 30rpx;
  background-position: center;
  background-repeat: no-repeat;
  width: 60rpx;
  height: 60rpx;
  background-image: url('data:image/svg+xml;utf8,%3C%3Fxml%20version%3D%221.0%22%20encoding%3D%22UTF-8%22%3F%3E%3Csvg%20width%3D%2224%22%20height%3D%2224%22%20viewBox%3D%220%200%2048%2048%22%20fill%3D%22none%22%20xmlns%3D%22http%3A%2F%2Fwww.w3.org%2F2000%2Fsvg%22%3E%3Crect%20width%3D%2248%22%20height%3D%2248%22%20fill%3D%22white%22%20fill-opacity%3D%220.01%22%2F%3E%3Cpath%20d%3D%22M19%2012L31%2024L19%2036%22%20stroke%3D%22%23999%22%20stroke-width%3D%224%22%20stroke-linecap%3D%22round%22%20stroke-linejoin%3D%22round%22%2F%3E%3C%2Fsvg%3E');
}
.sport-clock {
  width: 170rpx;
  height: 60rpx;
  line-height: 60rpx;
  background-color: #d8e1e8;
  color: #fff;
  font-size: 28rpx;
  text-align: center;
  border-radius: 30rpx;
}
.day-message {
  flex: 1 0 33.3%;
  text-align: center;
}
.btn-normal {
  display: inline-flex;
  width: 230rpx;
  height: 70rpx;
  align-items: center;
  justify-content: center;
  color: #fff;
  background-color: #75acff;
  border-radius: 35rpx;
  font-size: 28rpx;
}
.ivon-date {
  width: 30rpx;
  height: 30rpx;
}
.ivon-down {
  width: 30rpx;
  height: 30rpx;
}
.clock-img {
  width: 200rpx;
  height: 200rpx;
  border-radius: 12rpx;
  background-color: #f3f3f3;
  margin-left: auto;
  margin-right: auto;
}
.link {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  padding: 9rpx 24rpx;
  border: 1px solid #999;
  color: #999;
  font-size: 24rpx;
  border-radius: 30rpx;
}
.tab {
  position: relative;
  line-height: 1.7;
}
.tab.active {
  color: #75acff;
}
.tab.active::after {
  bottom: 0;
  width: 100%;
  background-color: #75acff;
  display: block;
  content: '';
  left: 0;
  height: 4px;
  border-radius: 4px;
}
.diet-item .media-wrap {
  width: 124rpx;
  height: 124rpx;
  background-color: #f3f3f3;
  border-radius: 9rpx;
}
.diet-item .text-container {
  width: calc(100% - 124rpx - 30rpx);
}
.diet-item.disable .text-container {
  opacity: 0.5;
}
