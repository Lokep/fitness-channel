page {
  background-color: #f8f8f8;
}
.shadow-light {
  box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
  border-bottom: var(safe-area-bottom);
}
.page {
  padding: 30rpx 0 calc(constant(safe-area-inset-bottom, 30rpx) / 2) 0;
  padding: 30rpx 0 calc(env(safe-area-inset-bottom, 30rpx) / 2) 0;
}
.course-slide {
  margin: 0 30rpx 30rpx 30rpx;
  padding: 42rpx;
  border-radius: 18rpx;
  background-color: #fff;
  box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
  border-bottom: var(safe-area-bottom);
}
.course-title {
  font-size: 32rpx;
  font-weight: bold;
  line-height: 42rpx;
  color: #222;
  margin-bottom: 12rpx;
}
.course-text {
  font-size: 26rpx;
  color: #666;
  line-height: 1.5;
}
