<!--pages/sport/clock/clock.wxml-->
<view class="page">
  <view class="car-container">
    <view class="car-container-title bold"><text class="required f-orange f22">*</text> 拍照上传</view>
    <view class="media-wrap clock-img mt-30 ivon-camera-fill">
      <van-uploader class="clock-upload" accept="image" sizeType="['compressed']" max-count="1" deletable
        preview-size="200rpx" file-list="{{ fileList }}" bind:after-read="handleUpload"
        bind:delete="handleDeleteUpload" />
    </view>
  </view>
