  <view class="car-container">
    <view class="car-container-title bold">睡眠时长</view>
    <view class="mt-25"></view>
    <view class="pt-5 pb-5">
      <input type="number" class="f24 f-number input-inline-block" placeholder="请输入" placeholder-class="text-lighter"
        model:value="{{hour}}" />
      <text class="f24 text-light ml-10 mr-10"> 小时</text>
      <input type="number" class="f24 f-number input-inline-block" placeholder="请输入" placeholder-class="text-lighter"
        model:value="{{minute}}" />
      <text class="f24 text-light ml-10"> 分钟</text>
    </view>
  </view>
  <view class="car-container">
    <view class="car-container-title bold">描述内容 <text class="f22 text-lighter">0/100</text></view>
    <view class="mt-25"></view>
    <view class="pt-5 pb-5 ">
      <textarea class="f24" style="min-height:100px" maxlength="100" auto-height="{{true}}" placeholder="请输入内容..."
        model:value="{{describe}}" />
      </view>
  </view>
  <button wx:if="{{true}}" class="full-btn fixed" bindtap="addSleepRecord">保存记录</button>
</view>